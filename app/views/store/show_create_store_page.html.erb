<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <h2 class="text-center">新建商店</h2>
    <div id="error_msg">
      <% if @store.errors.any? %>
        <div id="error_msg" class="text-center" style="color: red; margin-top: 15px">
          <h5>出错啦!</h5>
          <% @store.errors.full_messages.each do |message| %>
            <%= message %> <br>
          <% end %>
        </div>
      <% end %>
    </div>
    <br>
    <%= form_tag store_new_path do %>
      <div class="input-group">
        <label class="form-inline" for="store_name" style="margin-top: 5px;margin-right: 10px;">店铺名</label>
        <input type="text" class="form-control" id="store_name" name="store_name" required>
      </div>
      <br>
      <input type="submit" class="form-control btn-primary" value="新建店铺">
    <% end %>
  </div>
  <div class="col-md-2"></div>
</div>