<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <h3 class="text-center" style="margin-bottom: 20px;">欢迎注册会员</h3>
    <%= form_with model: @user, local: true, url: {action: 'do_sign_up'} do |form| %>

      <% if @user.errors.any? %>
        <div id="error_msg" class="text-center" style="color: red; margin-top: 15px">
          <h5>出错啦!</h5>
          <% @user.errors.full_messages.each do |message| %>
            <%= message %> <br>
          <% end %>
        </div>
      <% end %>
      <br>
      <div class="form-group">
        <div class="input-group">
          <label for="name" class="form-inline" style="padding-right: 5px">账号</label>
          <input type="text" id="name" name="name" class="form-control" required>
        </div>
        <br>
        <div class="input-group">
          <label for="password" class="form-inline" style="padding-right: 5px">密码</label>
          <input type="password" id="password" name="password" class="form-control" required>
        </div>
        <br>
        <%= form.submit '注册', class: 'btn btn-primary form-control' %>
      </div>
    <% end %>
  </div>
  <div class="col-md-2"></div>
</div>