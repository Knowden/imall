<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <h3 class="text-center" style="margin-bottom: 20px;">用户登录</h3>
    <h6 class="text-center" style="color: red"><%= alert %></h6>
    <%= form_with model: @user, local: true, url: {action: 'do_sign_in'} do |form| %>
      <div class="form-group">
        <div class="input-group">
          <%= form.label :name, '账号', class: 'form-inline', style: 'padding-right:5px' %>
          <%= form.text_field :name, class: 'form-control', require: true %>
        </div>
        <br>
        <div class="input-group">
          <%= form.label :password, '密码', class: 'form-inline', style: 'padding-right:5px' %>
          <%= form.password_field :password, class: 'form-control', require: true %>
        </div>
        <br>
        <%= form.submit '登录', class: 'btn btn-primary form-control' %>
      </div>
    <% end %>
  </div>
  <div class="col-md-2"></div>
</div>