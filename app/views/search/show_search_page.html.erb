<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8" id="main">
    <h3 class="text-center">搜索结果如下</h3> <br>
    <%
      i = 0
      @items.each do |item|
    %>
      <% if i % 4 == 0 %>
        <div class="row">
      <% end %>
      <div class="col-md-3">
        <h3><%= item[:name] %></h3>
      </div>
      <% if i % 4 == 3 %>
        </div>
      <% end %>
    <%
      i += 1
      end
    %>
    <% if @items.all.count % 4 != 0 %>
      </div>
    <% end %>

    <div class="row">
      <div class="col-md-3">1</div>
      <div class="col-md-3">1</div>
      <div class="col-md-3">1</div>
      <div class="col-md-3">1</div>
    </div>
  </div>
  <div class="col-md-2"></div>
</div>