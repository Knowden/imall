<div class="container-fluid" style="background: #e2e2e2; padding-bottom: 10px; margin-bottom: 40px">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
      <div id="top_bar" class="row" style="margin-top: 10px">
        <div class="col-md-4 text-left">
          <span style="margin-right: 10px"><%= link_to '主页', root_path %></span>
          <% if session[:current_user].nil? %>
              <span style="margin-right: 10px">您好, <%= link_to '请登录', sign_in_path %></span>
              <span><%= link_to '注册', sign_up_path %></span>
            <% else %>
              <span style="margin-right: 10px">您好, <%= session[:current_user]["name"] %></span>
              <span><%= link_to '注销', sign_out_path %></span>
            <% end %>
        </div>
        <div class="col-md-4"></div>
        <div class="col-md-4 text-right">
          <span style="margin-right: 10px"><%= link_to '我的购物车', cart_path %></span>
          <span style="margin-right: 10px"><a href="javascript:void(0)">历史订单</a></span>
          <span><a href="javascript:void(0)">我要卖东西</a></span>
        </div>
      </div>
    </div>
    <div class="col-md-1"></div>
  </div>
</div>